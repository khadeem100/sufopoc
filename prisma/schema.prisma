// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  STUDENT
  EXPERT
  AMBASSADOR
  ADMIN
}

enum ApplicationStatus {
  SUBMITTED
  VIEWED
  INTERVIEW
  ACCEPTED
  REJECTED
}

enum JobType {
  FULL_TIME
  PART_TIME
  INTERNSHIP
  CONTRACT
  FREELANCE
}

enum JobCategory {
  TECHNOLOGY
  MARKETING
  SALES
  DESIGN
  EDUCATION
  HEALTHCARE
  FINANCE
  OTHER
}

enum ProgramType {
  BACHELOR
  MASTER
  MBO
  HBO
  EXCHANGE
  CERTIFICATE
  OTHER
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  name          String?
  role          UserRole  @default(STUDENT)
  image         String?
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Student fields
  cvUrl         String?
  skills        String[]
  education     Json?
  experience    Json?
  interests     JobCategory[]

  // Expert fields
  expertise     String[]
  portfolioLinks String[]
  yearsOfExperience Int?
  jobPreferences Json?

  // Ambassador fields
  bio           String?
  region        String?
  isVerified    Boolean   @default(false)

  // Relations
  jobsCreated   Job[]     @relation("JobCreator")
  opleidingenCreated Opleiding[] @relation("OpleidingCreator")
  applications  Application[]
  accounts      Account[]
  sessions      Session[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Job {
  id          String      @id @default(cuid())
  title       String
  description String      @db.Text
  requirements String     @db.Text
  location    String
  salaryMin   Int?
  salaryMax   Int?
  type        JobType
  category    JobCategory
  isExpired   Boolean     @default(false)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  createdById String

  createdBy   User        @relation("JobCreator", fields: [createdById], references: [id], onDelete: Cascade)
  applications Application[]

  @@map("jobs")
}

model Opleiding {
  id          String      @id @default(cuid())
  
  // Basis informatie
  title              String
  partnerCountry     String
  partnerSchool      String
  shortDescription   String              @db.Text
  longDescription    String              @db.Text
  category           String
  programType        ProgramType

  // School & Land informatie
  schoolAddress      String?             @db.Text
  schoolCity         String?
  schoolCountry      String?
  schoolEmail        String?
  schoolPhone        String?
  schoolWebsite      String?
  admissionRequirements String           @db.Text

  // Studie details
  studyDurationYears Int?
  startDate          DateTime?
  language           String
  tuitionFeeYear     Float?
  scholarships       String?             @db.Text
  requiredDocuments  String[]            // passport, diploma, CV, etc.

  // Application process
  applicationDeadline      DateTime?
  processingTime           String?
  interviewRequired        Boolean        @default(false)
  intakeFormRequired       Boolean        @default(false)
  additionalTests          String[]       // IELTS, TOEFL, etc.

  // Media
  thumbnailUrl       String
  bannerUrl          String?
  promoVideoUrl      String?

  // Extra
  isVisible          Boolean             @default(true)
  tags               String[]
  documents          String[]            // PDF URLs

  // Legacy fields (for backward compatibility during migration)
  location           String?             @map("location_legacy")
  duration           String?             @map("duration_legacy")
  description        String?             @db.Text @map("description_legacy")
  requirements       String?             @db.Text @map("requirements_legacy")
  
  isExpired          Boolean             @default(false)
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  createdById        String

  createdBy          User                @relation("OpleidingCreator", fields: [createdById], references: [id], onDelete: Cascade)
  applications       Application[]

  @@map("opleidingen")
}

model Application {
  id          String            @id @default(cuid())
  status      ApplicationStatus @default(SUBMITTED)
  cvUrl       String?
  coverLetter String?           @db.Text
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  userId      String
  user        User              @relation(fields: [userId], references: [id], onDelete: Cascade)

  jobId       String?
  job         Job?              @relation(fields: [jobId], references: [id], onDelete: Cascade)

  opleidingId String?
  opleiding   Opleiding?        @relation(fields: [opleidingId], references: [id], onDelete: Cascade)

  @@map("applications")
}

